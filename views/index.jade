doctype html
html(ng-app='poll')
  head
    meta(charset='utf-8')
    meta(name='render', content='webkit')
    meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')
    meta(http-equiv='Cache-Control', content='no-siteapp')
    meta(name='keywords', content='gs-poll')
    meta(name='description', content='')
    meta(name='author', content='')
    meta(name='robots', content='index,follow')
    meta(name='viewport', content='width=device-width,initial-scale=1.0')
    title= title

    link(rel='stylesheet', href='/commons/bootstrap/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body(ng-controller='PollListCtrl')
    nav.navbar.navbar-inverse.navbar-fixed-top
      div.container
        div.navbar-header
          a.navbar-brand(href='#/polls') #{title}
    div.container
      div(ng-view)

    script(src='/commons/jquery-1.11.2.min.js')
    script(src='/commons/bootstrap/bootstrap.min.js')
    script(src='/commons/angular/angular.min.js')
    script(src='/commons/angular/angular-route.min.js')
    script(src='/commons/angular/angular-resource.min.js')
    script(src='/socket.io/socket.io.js')
    script(src='/javascripts/service.js')
    script(src='/javascripts/main.js')